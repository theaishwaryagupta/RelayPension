<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codewarriors.hackathone.relaypension.adminside.AdminLogin"
    android:background="@color/avtivitybackground"
    android:padding="7dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:padding="10dp"
        android:background="@drawable/layoutbackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="335dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">


                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="Administrator Login"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/admemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/pass"
                    android:layout_alignStart="@+id/pass"
                    android:layout_below="@+id/login"
                    android:layout_marginTop="27dp"
                    android:ems="10"
                    android:hint="Enter Email "
                    android:inputType="textPersonName"
                    android:textAlignment="center">
                </EditText>


                <EditText
                    android:id="@+id/pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:textAlignment="center">

                </EditText>


                <Button
                    android:id="@+id/signin"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_alignLeft="@+id/signup"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/signup"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:background="@drawable/buttonshape"
                    android:shadowRadius="5"
                    android:text="Sign in"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/signup"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_above="@+id/signin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="Sign Up"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>






</RelativeLayout>
